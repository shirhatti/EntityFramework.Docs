{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "_site/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.md"],
        "src": "aspnetcore",
        "dest": "aspnetcore"
      },
      {
        "files": ["**/*.md"],
        "src": "aspnet",
        "dest": "aspnet"
      },
      {
        "files": ["toc.yml", "index.md"]
      }
    ],
    "resource": [
      {
        "files": [
          "**.png",
          "**.jpg"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": "apidoc/*.md",
    "dest": "_site",
    "template": [
      "default"
    ]
  }
}